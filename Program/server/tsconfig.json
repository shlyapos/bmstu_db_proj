{
    "compilerOptions": {
        "outDir": "./dist/",
        "baseUrl": "./",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "jsx": "react",
        "allowJs": true,
        "typeRoots": [
            "../node_modules/@types"
        ]
    },
    "include": [
        "./src/**/*.ts",
    ],
    "exclude": [
        "node_modules"
    ]
}